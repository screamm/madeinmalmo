generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  first_name String
  last_name  String
  posts      BlogPost[]
}

model BlogPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  img_url   String
  content   String
  user    User     @relation(fields: [userId], references: [id])
  userId  String   @db.ObjectId
}